<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:layoutAnimation="@anim/layoutanim">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/tv_detay_hareket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BENCH PRESS"
                android:textAlignment="center"
                android:textColor="#1B1B1B"
                android:textSize="20sp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/error" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ÇALIŞTIRDIĞI KASLAR"
                android:textAlignment="center"
                android:textColor="#1B1B1B"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_detay_kaslar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/fare" />

            <TextView
                android:id="@+id/tv_detay_aciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="BİLGİLER"
                android:textAlignment="center"
                android:textColor="#1B1B1B"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_detay_nasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableTop="@android:drawable/ic_media_play"
                android:paddingLeft="60dp"
                android:paddingTop="30dp"
                android:paddingRight="60dp"
                android:paddingBottom="30dp"
                android:text="Nasıl Yapılır?"
                app:backgroundTint="#FF0000"
                app:cornerRadius="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>