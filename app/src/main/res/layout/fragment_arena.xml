<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Arena">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal">

                    <Button
                        android:id="@+id/btn_degisim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.75"
                        android:drawableTop="@drawable/transformation"
                        android:padding="15dp"
                        android:text="En büyük değişimler"
                        android:textSize="14sp"
                        app:cornerRadius="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center_horizontal">

                    <Button
                        android:id="@+id/btn_kol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.75"
                        android:drawableTop="@drawable/kol"
                        android:padding="15dp"
                        android:text="En büyük kol kaç cm?"
                        android:textSize="14sp"
                        app:cornerRadius="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center_horizontal">

                    <Button
                        android:id="@+id/btn_omuz"
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:alpha="0.75"
                        android:drawableTop="@drawable/shoulder"
                        android:padding="15dp"
                        android:text="En geniş omuzlar kimde?"
                        android:textSize="14sp"
                        app:cornerRadius="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/btn_enbuyuk"
                                android:layout_width="180dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginEnd="100dp"
                                android:alpha="0.75"
                                android:drawableTop="@drawable/biggest"
                                android:padding="15dp"
                                android:text="en büyük\n10"
                                android:textSize="14sp"
                                app:cornerRadius="20dp" />

                            <Button
                                android:id="@+id/btn_enfit"
                                android:layout_width="180dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="100dp"
                                android:alpha="0.75"
                                android:drawableTop="@drawable/fit"
                                android:padding="15dp"
                                android:text="en fit\n10"
                                android:textSize="14sp"
                                app:cornerRadius="20dp" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/btn_total"
                                android:layout_width="180dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginEnd="100dp"
                                android:alpha="0.75"
                                android:drawableTop="@drawable/power"
                                android:padding="15dp"
                                android:text="powerlift total 10"
                                android:textSize="14sp"
                                app:cornerRadius="20dp" />

                            <Button
                                android:id="@+id/btn_bench"
                                android:layout_width="180dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="100dp"
                                android:alpha="0.75"
                                android:drawableTop="@drawable/bench"
                                android:padding="15dp"
                                android:text="bench press\n10"
                                android:textSize="14sp"
                                app:cornerRadius="20dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/btn_squat"
                                android:layout_width="180dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginEnd="100dp"
                                android:alpha="0.75"
                                android:drawableTop="@drawable/squat"
                                android:padding="15dp"
                                android:text="squat\n10"
                                android:textSize="14sp"
                                app:cornerRadius="20dp" />

                            <Button
                                android:id="@+id/btn_deadlift"
                                android:layout_width="180dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="100dp"
                                android:alpha="0.75"
                                android:drawableTop="@drawable/deadlift"
                                android:padding="15dp"
                                android:text="deadlift\n10"
                                android:textSize="14sp"
                                app:cornerRadius="20dp" />
                        </FrameLayout>

                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>