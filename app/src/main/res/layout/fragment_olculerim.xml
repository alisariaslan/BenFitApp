<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1ACE93D8"
    tools:context=".Olculerim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_olcu_backl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:alpha=".7"
            android:text="geri"
            app:icon="@drawable/ic_baseline_arrow_back_24"
            app:iconGravity="textTop" />

        <Button
            android:id="@+id/btn_olcu_sil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:alpha=".7"
            android:text="sil"
            android:visibility="gone"
            app:icon="@drawable/ic_baseline_delete_24"
            app:iconGravity="textTop"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_olcu_duzenle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:alpha=".7"
            android:text="düzenle"
            android:visibility="gone"
            app:icon="@drawable/ic_baseline_edit_24"
            app:iconGravity="textTop"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_adsoyad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Lütfen isim yazın"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_bul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:alpha=".7"
                android:enabled="false"
                android:text="bul"
                app:icon="@android:drawable/ic_menu_search" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"
            tools:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_tarih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="30dp"
                    android:text="Tarih:"
                    android:textAlignment="textStart"
                    android:textSize="28sp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Spinner
                    android:id="@+id/spin_tarih"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:entries="@array/blankArray"
                    android:paddingTop="8dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:spinnerMode="dialog"
                    android:textAlignment="textStart"
                    android:translationX="70dp"
                    android:visibility="visible"
                    tools:visibility="visible" />

            </LinearLayout>

            <Switch
                android:id="@+id/sw_karsilastir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Karşılaştır "
                android:textSize="20sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <ScrollView
                android:id="@+id/sv_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/olculerim_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_tarih"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="tarih"
                                android:text="Tarih:"
                                android:textSize="34sp"
                                android:visibility="gone"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_ad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="ad"
                                android:text="Ad:"
                                android:textSize="34sp"
                                android:visibility="gone"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_yas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="yas"
                                android:text="Yaş:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_cinsiyet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="cinsiyet"
                                android:text="Cinsiyet:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_kilo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="kilo"
                                android:text="Kilo:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_boy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="boy"
                                android:text="Boy:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_boyun"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="boyun"
                                android:text="Boyun kalınlığı:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_onkol"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="onkol"
                                android:text="Ön kol:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_kol"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="kol"
                                android:text="Kol:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_bicep"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="bicep"
                                android:text="Bicep:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_omuz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="omuz"
                                android:text="Omuz:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_gogus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="gogus"
                                android:text="Göğüs:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_karin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="karin"
                                android:text="Karın:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_kalca"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="kalca"
                                android:text="Kalça:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_bacak"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="bacak"
                                android:text="Bacak:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_calf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="calf"
                                android:text="Calf:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_vucutKitleEndeksi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="vke"
                                android:text="Vücut kitle endeksi:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_yagorani"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="tyo"
                                android:text="Tahimini yağ oranı:"
                                android:textSize="34sp" />

                            <TextView
                                android:id="@+id/tv_antrenor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:tag="antrenor"
                                android:text="Antrenör:"
                                android:textSize="34sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>