<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1ACE93D8"
    tools:context=".Olculerim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/sv_giris"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_tarih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Tarih"
                    android:inputType="date"
                    android:maxLength="10"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_isim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Ad"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_yas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Yaş"
                    android:inputType="numberSigned"
                    android:maxLength="2"
                    android:textSize="24sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:checkedButton="@id/rb_erkek"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="1"
                        android:text="Cinsiyet:"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/rb_erkek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="Erkek"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/rb_kadin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="Kadın"
                        android:textSize="20sp" />
                </RadioGroup>

                <EditText
                    android:id="@+id/et_kilo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Kilo"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_boy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Boy"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_boyun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Boyun"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_onkol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Önkol"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_kol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Kol"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_bicep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Bicep"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_omuz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Omuz"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_gogus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Göğüs"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_karin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Karın"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_kalca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Kalça"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_bacak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Bacak"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_calf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Calf"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_ant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Antrenör"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_ekle"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="15dp"
                    android:alpha=".7"
                    android:text="ekle"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconPadding="30dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>